!!!!!!!!!!!!!!
!!  urxvt   !!
!!!!!!!!!!!!!!

urxvt*font:			       xft:DejaVu Sans Mono:style=Book:pixelsize=17:antialias=true:hinting=true
urxvt*boldFont:        xft:dejavu Sans Mono:style=Book:pixelsize=17:antialias=true:bold:hinting=true
urxvt*italicFont:      xft:dejavu Sans Mono:style=Book:pixelsize=17:antialias=true:italic:autohint=true:hinting=true
urxvt*bolditalicFont:  xft:dejavu Sans Mono:style=Book:pixelsize=17:antialias=true:bold:italic:autohint=true:hinting=true

urxvt*background:		  #000000
urxvt*foreground:		  #ffffff

urxvt*inheritPixmap:  true
urxvt*transparent:		true
urxvt*shading:			  15
urxvt*tintColor:	    #ffffff

! Tango like color theme
URxvt.foreground: #C8C8C8
URxvt.background: #323232
URxvt.color0:  	  #2E3436
URxvt.color1: 	  #CC0000
URxvt.color2: 	  #4E9A06
URxvt.color3: 	  #C4A000
URxvt.color4:	    #3465A4
URxvt.color5:	    #75507B
URxvt.color6: 	  #06989A
URxvt.color7: 	  #D3D7CF
URxvt.color8: 	  #555753
URxvt.color9: 	  #EF2929
URxvt.color10: 	  #8AE234
URxvt.color11: 	  #FCE94F
URxvt.color12: 	  #729FCF
URxvt.color13: 	  #AD7FA8
URxvt.color14: 	  #34E2E2
URxvt.color15: 	  #EEEEEC

URxvt.scrollTtyOutput:   false
URxvt.scrollWithBuffer:  true
URxvt.scrollTtyKeypress: true

urxvt*scrollBar:         	false
urxvt*visualBell:      		true
urxvt*cursorBlink:      	true
urxvt*cursorUnderline:  	true
urxvt*saveLines:         	2000
urxvt*secondaryScroll: 		true
urxvt*perl-ext-common: 		default,matcher,selection-popup,option-popup,searchable-scrollback<M-s>,readline,font-size
urxvt*url-launcher:		    /usr/bin/chromium
urxvt*matcher.button: 		1

! urxvt-fonsize keybindings
! see https://github.com/majutsushi/urxvt-font-size
URxvt.keysym.C-Up:     perl:font-size:increase
URxvt.keysym.C-Down:   perl:font-size:decrease
URxvt.keysym.C-S-Up:   perl:font-size:incglobal
URxvt.keysym.C-S-Down: perl:font-size:decglobal


URxvt.urgentOnBell:  true

